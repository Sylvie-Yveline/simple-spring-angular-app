
pipeline {
agent{
    docker {
            image 'openjdk:8-jdk-alpine'
            args '-p 8087:8080'
        }
}
    stages {    
        stage('java') {
                         when { branch ‘production’ }
                 steps {



              
                sh "java -version"
          }              
        }
 
    }
        post {
            always {
                echo 'end pipeline'
            }
            }   
}

        
